<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="System.Configuration.IgnoreSectionHandler"/>
    <sectionGroup name="setup">
      <section name="ThemeSetting" type="Components.ThemeConfigHandler,CA_Components"/>
    </sectionGroup>
  </configSections>
  <log4net>
    <!-- Define some output appenders -->
    <appender name="ClientEngineLog" type="log4net.Appender.RollingFileAppender">
      <file value="${APPDATA}\\Panasonic\\Communication Assistant\\Log\\ClientEngineLog.txt"/>
      <appendToFile value="true"/>
      <maxSizeRollBackups value="3"/>
      <maximumFileSize value="4MB"/>
      <rollingStyle value="Size"/>
      <namePattern value="ClientEngineLog%i"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%date][%level] %message%newline"/>
      </layout>
    </appender>
    <appender name="VersionLog" type="log4net.Appender.RollingFileAppender">
      <file value="${APPDATA}\\Panasonic\\Communication Assistant\\Log\\Version.txt"/>
      <appendToFile value="true"/>
      <maxSizeRollBackups value="1"/>
      <maximumFileSize value="1MB"/>
      <rollingStyle value="Size"/>
      <namePattern value="version%i"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%date][%level] %message%newline"/>
      </layout>
    </appender>
    <appender name="ErrorLog" type="log4net.Appender.RollingFileAppender">
      <file value="${APPDATA}\\Panasonic\\Communication Assistant\\Log\\Errorlog.txt"/>
      <appendToFile value="true"/>
      <maxSizeRollBackups value="3"/>
      <maximumFileSize value="4MB"/>
      <rollingStyle value="Size"/>
      <namePattern value="errorlog%i"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%date][%level] %message%newline"/>
      </layout>
    </appender>
    <appender name="DebugLog" type="log4net.Appender.RollingFileAppender">
      <file value="${APPDATA}\\Panasonic\\Communication Assistant\\Log\\Tracelog.txt"/>
      <appendToFile value="true"/>
      <maxSizeRollBackups value="3"/>
      <maximumFileSize value="4MB"/>
      <rollingStyle value="Size"/>
      <namePattern value="tracelog%i"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%date][%level] %message%newline"/>
      </layout>
    </appender>
    <logger name="LoggerIF.CEngineLog">
      <level value="ALL"/>
      <appender-ref ref="ClientEngineLog"/>
    </logger>
    <logger name="LoggerIF.CVersionLog">
      <level value="ALL"/>
      <appender-ref ref="VersionLog"/>
    </logger>
    <logger name="LoggerIF.CErrorLog">
      <level value="ALL"/>
      <appender-ref ref="ErrorLog"/>
    </logger>
    <logger name="LoggerIF.CDebugLog">
      <level value="ALL"/>
      <appender-ref ref="DebugLog"/>
    </logger>

  </log4net>
  <setup>
    <ThemeSetting configSource="ThemeSetting.config"/>
  </setup>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7"/></startup></configuration>
